<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gome.ocs.manager.dao.IChatLinkWhitelistDao">
	<insert id="addChatLinkWhitelist" parameterType="com.gome.ocs.manager.model.ChatLinkWhitelistModel" 
	flushCache="true" statementType="PREPARED">
	  		insert into t_chat_link_whitelist(id,content,create_time)values(#{id},#{content},#{createTime}); 
	</insert>
	<delete id="delChatLinkWhitelist" parameterType="String"
		flushCache="true" statementType="PREPARED">
		delete from t_chat_link_whitelist where id=#{id}
	</delete>
	<update id="updateChatLinkWhitelist" parameterType="com.gome.ocs.manager.model.ChatLinkWhitelistModel"
		flushCache="true" statementType="PREPARED">
		update t_chat_link_whitelist set
		content=#{content},modify_time=#{modifyTime} where id=#{id}
	</update>
	<select id="queryAllChatLinkWhitelist" parameterType="String"
		resultType="map" statementType="PREPARED">
		select id,content from t_chat_link_whitelist order by create_time desc
	</select>
</mapper>