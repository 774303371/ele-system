<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gome.ocs.manager.dao.IForbiddenWord">

	<sql id="ForbiddenWordColumn">
			is_open,warning_word,forbidden_word
  	</sql>
	<select id="updateForbiddenWord">
		SELECT
		<include refid="ForbiddenWordColumn"/>
		FROM  forbidden_word

	</select>

	<update id="getForbiddenWord"  parameterType="String">
		UPDATE forbidden_word set
		<if test="roleId != null">
			is_open = #{isOpen},
		</if>
		<if test="userId != null">
			warning_word = #{warningWord},
		</if>
		<if test="companyId != null">
			forbidden_word = #{forbiddenWord},
		</if>

	</update>


  	
</mapper>